<toolbox>
    <category name="Start" colour="160"  icon="\turtle\start.png">
        <block type="block_start">

        </block>
    </category>
    <category name="Drive" colour="160" icon="drive.png">

        <block type="turtle_move_internal">

            <field name="DIR">moveForward</field>
            <field name="VALUE">12</field>
            <field name="SP">100</field>
        </block>
        <block type="turtle_turn_internal">
            <field name="VALUE">90</field>
        </block>
    </category>

    <category name="Circle" colour="160" icon="circle.png">
        <block type="turtle_pen">
            <field name="PEN">penUp</field>
        </block>
    </category>

    <category name="Loops" colour="120" icon="loops.png">
        <block type="turtle_repeat_internal">
            <field name="TIMES">4</field>
        </block>
    </category>
</toolbox>
