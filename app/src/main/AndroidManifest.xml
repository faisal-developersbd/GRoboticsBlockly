<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="faisal.grobotics.com.groboticsblockly">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateHidden|adjustPan"

        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity" android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="faisal.grobotics.com.groboticsblockly.BluetoothConnection"
            android:screenOrientation="landscape" />
        <activity
            android:name="faisal.grobotics.com.groboticsblockly.SplashScreenactivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name="faisal.grobotics.com.groboticsblockly.PlayActivity"
            android:screenOrientation="landscape"></activity>
    </application>


</manifest>